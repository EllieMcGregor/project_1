    <%= f.label :classroom_id %><br>
    <%=  f.collection_select :classroom_id, Classroom.order(:room_name).uniq,:id,:room_name  %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>

 
  <div class="actions">
    <%= f.submit %>
  </div>
