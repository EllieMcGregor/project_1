
<h1>Listing bookings</h1>


<table>
  <thead>
    <tr>
      <th>Course</th> 
      <th>Classroom</th>
      <th>Booked date</th>
      <th>Created at </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  


  <tbody>
    <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.course.try :name %></td>
      <td><%= booking.classroom.try :room_name %></td>
      <td><%= booking.date %></td>
      <td><%= booking.created_at %> </td>

    
      <td><%= link_to 'Show', booking %></td>
      <td><%= link_to 'Edit', edit_booking_path(booking) if can? :edit, Booking %></td>
      <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Booking %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Booking', new_booking_path %>
