<header class='main-header'>
<div class='logo'>
<IMG SRC="https://generalassemb.ly/online/assets/ga-lockup-logo-9d95d5d0a1c966540edaedcb440b1963.png" HEIGHT=100>
<h2> GA SCHEDULE PLAN.NER </h2>
</div>

<div id ='main-nav'>
  <nav>
    <ul class="nav nav-pills">
      <li role="presentation" class="active">
        <%= menu_item 'Campuses', campuses_path if can? :show, Campus %>
      </li>

      <%= drop_down "Courses" do %>
        <li role="presentation" class="active">
          <%= menu_item 'All Courses', courses_path %>
        </li>

      <li role="presentation" class="active">
        <%= menu_item 'Bookings', bookings_path if can? :show, Booking %>
      </li>

    
        <%= menu_item "Create new course", new_course_path if can? :create, Course %>
        <%= menu_item "All Students", enrolls_path %>
        <%= menu_item "All Instructors", instructs_path %>
      <% end %>
      <%= menu_item "People at GA", users_path if can? :read, User %>

      <li role="presentation" class="active">
        <%= menu_item "My Profile",  my_profile_path if can? :read, User %>
      </li>
      
      <li role="presentation" class="active">
        <% if current_user %>
        <%= menu_item current_user.email %>
      </li>

      <li role="presentation" class="active">
        <%= menu_item "Log out", destroy_user_session_path, method: :delete %>
        <% else %>
        <%= link_to "Sign In", new_user_session_path %>
        </li>
        <li class='register'>
        <%= link_to "Register", new_user_registration_path %>
        <% end %>
      </li>

    </ul>
  </nav>
</div>
</header>