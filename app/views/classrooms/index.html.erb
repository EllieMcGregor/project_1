<h1>Listing classrooms</h1>

<table>
  <thead>
    <tr>
      <th>Room name</th>
      <th>Capacity</th>
      <th>Campus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.room_name %></td>
        <td><%= classroom.capacity %></td>
        <td><%= classroom.campus.try :name %></td>
        <td><%= link_to 'Show', classroom %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom) if can? :edit, Classroom %></td>
        <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Classroom %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classroom', new_classroom_path if can? :create, Classroom %>
<%= link_to 'Back', classrooms_path %>
