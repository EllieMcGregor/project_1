<h1>Listing campuses</h1>

<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Description</th>
      <th>Location</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campuses.each do |campus| %>
      <tr>
        <td><%= campus.name %></td>
        <td><%= campus.description %></td>
        <td><%= campus.location %></td>
        <td><%= image_tag campus.campus_image %></td>
        <td><%= link_to 'Show', campus %></td>
        <td><%= link_to 'Edit', edit_campus_path(campus) if can? :edit, Campus %></td>
        <td><%= link_to 'Destroy', campus, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Campus %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campus', new_campus_path if can? :create, Campus  %>
